<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="StationSearch" fileName="logs/ss.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker="INPUT_STATION"/>
            </Filters>
        </File>
        <File name="StationNotSearch" fileName="logs/sns.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker="INPUT_STATION_WRONG"/>
            </Filters>
        </File>
        <File name="Exception" fileName="logs/ex.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>
    <loggers>
        <root level="all">
            <appender-ref ref="StationSearch" level="info"/>
            <appender-ref ref="StationNotSearch" level="info"/>
            <appender-ref ref="Exception" level="error"/>
        </root>
    </loggers>
</configuration>